<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_automated_so_wizard_form" model="ir.ui.view">
        <field name="name">automated.so.wizard.form</field>
        <field name="model">automated.so.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Sales Order">
                <group>
                    <field name="product_id"/>
                    <field name="customer_id"/>
                    <field name="quantity"/>
                    <field name="price"/>
                </group>
                <footer>
                    <button name="confirm_so" type="object" string="Confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
